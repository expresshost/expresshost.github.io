#! /bin/bash
echo "const express = require('express');const app = express();app.use(express.static('./public'));const port = process.env.PORT || 5000;app.listen(port, () => { console.log(\"App hosted on http://[::]:\" + process.env.PORT); });" > serve.js; echo "{ \"name\": \"\", \"version\": \"1.0.0\", \"description\": \"\", \"main\": \"serve.js\", \"scripts\": { \"dev\": \"echo Starting Up In Development; nodemon serve.js\", \"start\": \"echo Starting Up; node serve.js\" }, \"keywords\": [], \"author\": \"\", \"license\": \"\", \"devDependencies\": { \"nodemon\": \"^2.0.4\" }, \"dependencies\": { \"express\": \"^4.17.1\" } }" > package.json; mkdir public; npm i; echo "All done";